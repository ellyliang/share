{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "static",  // TS文件编译后会放入到此文件夹内
        "baseUrl": "."
    },
    "paths": {
        "@/*": [
            "./client/src/*",
            "node_modules/*"
        ]
    },
    "typeRoots": [
        "./client/src",
        "./node_modules/vue/types"
    ],
    "files": [
        "./client/src/vue-shims.d.ts"
    ],
    "include": [
        "server/**/*"
    ]
}

